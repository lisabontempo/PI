<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="psicobaby.psicobaby.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Seja bem vindo(a) ao PsicoBaby!"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="0.10"
            android:text="Aqui você encontrará ótimas dicas para cuidar da saúde psicologica de sua criança, ajudando no seu desenvolvimento e tornando-a mais feliz."
            android:textAlignment="center"
            android:textSize="16sp"
            />

        <TextView
            android:layout_marginTop="100dp"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digite abaixo a idade em anos do seu bebê:"
            android:textAlignment="center"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtIdade"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center" />

        <Button
            android:layout_marginTop="50dp"
            android:layout_marginLeft="110dp"
            android:id="@+id/exibirAlerta"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Iniciar Aprendizagem"
            tools:layout_editor_absoluteX="105dp"
            tools:layout_editor_absoluteY="372dp"
            android:onClick="pegarIdade"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
