    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="psicobaby.psicobaby.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <Button
        android:id="@+id/exibirAlerta"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Iniciar Aprendizagem"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="372dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="368dp"
        android:layout_height="142dp"
        android:text="Seja bem vindo(a) ao PsicoBaby!"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="368dp"
        android:layout_height="323dp"
        android:text="Aqui você encontrará ótimas dicas para cuidar da saúde psicologica de sua criança, ajudando no seu desenvolvimento e tornando-a mais feliz."
